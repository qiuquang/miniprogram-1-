/* pages/transform/transform3/transform3.wxss */
.animatebox {
	display: block;
	width: 100px;
	height: 100px;
	background-color: #4a9d64;
	transition:width 1s, height 2s, background-color 2s, transform 2s;
}
.animatebox-hover {
	background-color: #cd584a;
	width:200px;
	height:200px;
	transform:rotate(180deg);
}